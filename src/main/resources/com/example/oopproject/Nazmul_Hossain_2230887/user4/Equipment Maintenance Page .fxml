<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.oopproject.Nazmul_Hossain_2230887.user4.EquipmentMaintenancePageController" spacing="10" alignment="CENTER">
    <children>
        <TextField fx:id="equipmentUsageLog" promptText="Log Equipment Usage"/>
        <ComboBox fx:id="maintenanceTypeSelection" promptText="Select Maintenance Type"/>
        <TableView fx:id="repairHistoryTable" prefHeight="300" prefWidth="400">
            <columns>
                <TableColumn text="Equipment"/>
                <TableColumn text="Last Maintenance"/>
                <TableColumn text="Status"/>
            </columns>
        </TableView>
        <Button fx:id="submitMaintenanceButton" text="Submit Maintenance Record" onAction="#submitMaintenanceRecord"/>
    </children>
</VBox>
