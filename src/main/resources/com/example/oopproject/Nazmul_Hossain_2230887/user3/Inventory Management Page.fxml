<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.oopproject.Nazmul_Hossain_2230887.user3.InventoryManagementPageController" spacing="10" alignment="CENTER">
    <children>
        <TextField fx:id="stockDetails" promptText="Add or Update Stock Details"/>
        <ComboBox fx:id="autoReorderThreshold" promptText="Set Auto-Reorder Thresholds"/>
        <TableView fx:id="inventoryTable" prefHeight="300" prefWidth="400">
            <columns>
                <TableColumn text="Item"/>
                <TableColumn text="Quantity"/>
                <TableColumn text="Status"/>
            </columns>
        </TableView>
        <Button fx:id="submitChangesButton" text="Submit Changes" onAction="#submitChanges"/>
    </children>
</VBox>
