<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopproject.Sadman_Sakib_2231152.User_1_irrigation_manager.IrrigationSchedulingController_1_2">
    <DatePicker fx:id="startTimePicker" layoutX="50" layoutY="50"/>
    <DatePicker fx:id="endTimePicker" layoutX="200" layoutY="50"/>

    <ComboBox fx:id="cropTypeComboBox" layoutX="50" layoutY="100"/>
    <ComboBox fx:id="irrigationZoneComboBox" layoutX="200" layoutY="100"/>
    <ComboBox fx:id="irrigationMethodComboBox" layoutX="50" layoutY="150"/>

    <Slider fx:id="waterApplicationRateSlider" layoutX="50" layoutY="200" min="0" max="100" value="50"/>
    <Slider fx:id="durationSlider" layoutX="50" layoutY="250" min="0" max="24" value="1"/>

    <Button fx:id="saveButton" layoutX="50" layoutY="300" text="Save Schedule"/>
    <Button fx:id="editButton" layoutX="200" layoutY="300" text="Edit Schedule"/>
    <Button fx:id="deleteButton" layoutX="350" layoutY="300" text="Delete Schedule"/>
</AnchorPane>
