<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml">
    <HBox spacing="5">
        <Label text="Training Session:" />
        <ComboBox fx:id="trainingSessionSelector" />
    </HBox>
    <TextField fx:id="quizInputField" promptText="Short quiz input" />
    <HBox spacing="10">
        <Button fx:id="submitQuizButton" text="Submit Quiz" />
        <Button fx:id="markCompleteButton" text="Mark Training Complete" />
    </HBox>
</VBox>
