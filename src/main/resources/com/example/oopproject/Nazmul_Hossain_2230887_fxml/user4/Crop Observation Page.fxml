<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml">
    <HBox spacing="5">
        <Label text="Select Crop or Plot:" />
        <ComboBox fx:id="cropSelector" />
    </HBox>
    <TextArea fx:id="cropObservationField" promptText="Input crop observations" />
    <TableView fx:id="observationLogsTable">
        <columns>
            <TableColumn text="Date" />
            <TableColumn text="Observation" />
        </columns>
    </TableView>
    <Button fx:id="submitObservationButton" text="Submit" />
</VBox>
