<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.oopproject.Nazmul_Hossain_2230887_controler.user3.OrderManagementPageController" spacing="10" alignment="CENTER">
    <children>
        <ComboBox fx:id="buyerOrderDetails" promptText="Select Buyer Order Details"/>
        <TableView fx:id="orderOverviewTable" prefHeight="300" prefWidth="400">
            <columns>
                <TableColumn text="Order ID"/>
                <TableColumn text="Product"/>
                <TableColumn text="Quantity"/>
                <TableColumn text="Delivery Date"/>
            </columns>
        </TableView>
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="generatePackingPlanButton" text="Generate Packing Plan" onAction="#generatePackingPlan"/>
            <Button fx:id="confirmOrderCompletionButton" text="Confirm Order Completion" onAction="#confirmOrderCompletion"/>
        </HBox>
    </children>
</VBox>
