<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml">
    <VBox spacing="15" alignment="CENTER">
        <Label text="Workforce Management" style="-fx-font-size: 16px;" />
        <HBox spacing="10">
            <Label text="Select Worker:" />
            <ComboBox fx:id="workerComboBox" />
        </HBox>
        <TableView fx:id="taskTable">
            <columns>
                <TableColumn text="Task" />
                <TableColumn text="Assigned By" />
                <TableColumn text="Status" />
            </columns>
        </TableView>
        <TextArea fx:id="taskNotesArea" promptText="Notes for the worker" />
        <HBox spacing="10">
            <Button text="Assign Task" fx:id="assignTaskButton" />
            <Button text="Submit" fx:id="submitTaskButton" />
        </HBox>
    </VBox>
</AnchorPane>
