<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.oopproject.Nazmul_Hossain_2230887_controler.user3.DashboardController">
    <top>
        <MenuBar>
            <menus>
                <Menu text="Workforce"/>
                <Menu text="Finance"/>
                <Menu text="Inventory"/>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <ComboBox fx:id="cropSelector" promptText="Select Crop"/>
            <TableView fx:id="cropMetricsTable">
                <columns>
                    <TableColumn text="Metric"/>
                    <TableColumn text="Value"/>
                </columns>
            </TableView>
            <Button fx:id="refreshButton" text="Refresh" onAction="#refreshMetrics"/>
        </VBox>
    </center>
</BorderPane>
